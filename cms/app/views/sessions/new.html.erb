<div class="container">
  <div class="row" style="margin-top:20px">
    <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
        <%= form_tag sessions_path,:method => :post do %>
          <h2>Please Sign In</h2>
          <hr class="colorgraph">
          <div class="form-group">
            <%= text_field_tag :email,nil, :class => 'form-control input-lg',:placeholder => "Email Address",:required => "",:type => "email"%>
          </div>
          <div class="form-group">
            <%= password_field_tag :password,nil,:class => 'form-control input-lg',:placeholder => "Password",:required => "",:type => "password"%>
          </div>
          <span class="button-checkbox">
            <button type="button" class="btn" data-color="info">Remember Me</button>
            <input type="checkbox" name="remember_me" id="remember_me" checked="checked" class="hidden">
            <a href="" class="btn btn-link pull-right">Forgot Password?</a>
		  </span>
          <hr class="colorgraph">
          <div class="row">
            <div class="col-xs-6 col-sm-6 col-md-6">
               <%= submit_tag "Login", :class => 'btn btn-lg btn-success btn-block' %>
            </div>
            <div class="col-xs-6 col-sm-6 col-md-6">
              <%= link_to "Register",root_path, :class => "btn btn-lg btn-primary btn-block" %>
            </div>
          </div>
       <% end %>
   </div>
 </div>
</div>