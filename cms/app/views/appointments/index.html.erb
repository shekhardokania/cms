<h1> Appointments Dashboard </h1>
<div id='calendar'></div>

<div class="modal fade" id="aptCreateModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">Create Appointment</h4>
      </div>
      <div class="modal-body">
        <%= form_tag("/appointments", method: "post") do %>
            <div class="form-group">
              <%= text_field_tag 'patient_name', nil, placeholder: 'PatientName',class: 'form-control'%>
            </div>
            <div class="form-group">
              <%= hidden_field_tag 'patient_id' %>
            </div>
            <div class="form-group">
              <%= hidden_field_tag 'start_date' %>
            </div>
            <div class="form-group">
              <%= hidden_field_tag 'end_date' %>
            </div>
            <div class="form-group">
              <%= hidden_field_tag 'allday' %>
            </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <%= submit_tag "Save changes", class: "btn btn-primary"%>
        <% end %>
        <!--<button type="button" class="btn btn-primary">Save changes</button>-->
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->


